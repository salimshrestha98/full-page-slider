{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "super-blocks/author-profile",
	"version": "0.1.0",
	"title": "Author Profile",
	"category": "widgets",
	"icon": "businesswoman",
	"description": "Display author profile in post.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"selectedAuthorId": {
		  "type": "number",
		  "default": 0
		},
		"author": {
			"type": "object",
			"default": {
				"name": "",
				"email": "",
				"description": "",
				"thumbnail": ""
			}
		},
		"showMore": {
		  "type": "boolean",
		  "default": false
		},
		"moreText": {
		  "type": "string",
		  "default": ""
		},
		"backgroundColor": {
		  "type": "string",
		  "default": "#ffffff"
		},
		"textAlign": {
		  "type": "string",
		  "default": "left"
		},
		"padding": {
		  "type": "string",
		  "default": "20px"
		}
	},
	"editorScript": "file:index.js",
	"editorStyle": "file:index.css",
	"style": "file:style-index.css"
}
